<div class="container p-5 w-50">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8 card px-5 py-4">
      <div class="text-center">
        <%= image_tag("opener-icon2.png", :size => "80x80", :crop => :fill) %>
        <h2>Opener</h2>
      </div>
        <%= form_for @user ,:url=>{:action=>'create'} do |form| %>
        <div class="field form-group">
          <%= form.label :user_name %>
          <%= form.text_field :user_name,class:"form-control"%>
        </div>

        <div class="field form-group">
          <%= form.label :password %>
          <%= form.password_field :password ,class:"form-control"%>
        </div>
        <div class="actions form-group">
          <%= form.submit "Save", class:"form-control b-black mt-3 btn btn-outline-dark" %>
        </div>
      <% end %>
<!--      <span class="text-center p-2">Not registered?<a href="">Sign up</a></span>-->
    </div>
    <div class="col-2"></div>
  </div>
</div>


<% if @user.errors.any? %>
  <div id="errorExplanation">

    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>