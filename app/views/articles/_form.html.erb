<div class="container py-5 w-50">
  <div class="row">
    <div class="col-12 py-4 bg-white box-s-secondary">
      <div class="text-center">
        <h2>Article</h2>
      </div>
      <%= form_for @article ,:url=>{:action=>'create'} do |form| %>
        <div class="field form-group">
          <%= form.label :name %>
          <%= form.text_field :name,class:"form-control"%>
        </div>

        <div class="field form-group">
          <%= form.label :description %>
          <%= form.text_area :description ,class:"form-control"%>
        </div>
        <div class="field form-group">
          <%= form.label :image_path %>
          <%= form.file_field :image_path ,class:"form-control"%>
        </div>
        <div class="actions form-group">
          <%= form.submit "Save", class:"form-control b-black mt-3 btn btn-outline-dark" %>
        </div>
      <% end %>
      <!--      <span class="text-center p-2">Not registered?<a href="">Sign up</a></span>-->
    </div>
  </div>
</div>


<% if @article.errors.any? %>
  <div id="errorExplanation">

    <h2><%= pluralize(@article.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>